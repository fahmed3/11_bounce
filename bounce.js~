var svg = document.getElementById("svg");
var clear = document.getElementById("clear");
var goID;

var bounce = function(){
	erase();
	var c1 = document.createElementNS("http://www.w3.org/2000/svg", "rect");
	var x = 250 * Math.random();
    var y = 250 * Math.random();
	var velocityX = 1;
	var velocityY = 1;
	c1.setAttribute("x", x);
	c1.setAttribute("y", y);
	c1.setAttribute("width", 20);
	c1.setAttribute("height", 20);
	c1.setAttribute("fill", "blue");
	svg.appendChild(c1);
	
	var go = function(){
		console.log("x = " + x);
		console.log("y = " + y);
		x += velocityX;
		y += velocityY;
		c1.setAttribute("x", x);
		c1.setAttribute("y", y);
		if (x <= 0 || x >= 480){
			velocityX *= -1;
		}
		else if (y <= 0 || y >= 480){
			velocityY *= -1;
		}
	}
	
	goID = setInterval(go, 10);
}

var erase = function(){
	while(svg.lastChild){
		svg.removeChild(svg.lastChild);
	}
	if (!(goID == null)){
		clearInterval(goID);
	}
}

clear.addEventListener("click", erase);
